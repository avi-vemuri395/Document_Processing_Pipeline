{
  "balance_sheet": {
    "name": "Balance Sheet",
    "dimensions": {
      "page_size": "letter",
      "margin_top": 72,
      "margin_bottom": 72,
      "margin_left": 72,
      "margin_right": 72
    },
    "header": {
      "company_name": {
        "position": [72, "page_height - 50"],
        "font": "Helvetica-Bold",
        "font_size": 16,
        "color": "black",
        "alignment": "left"
      },
      "statement_title": {
        "text": "BALANCE SHEET",
        "position": [72, "page_height - 75"],
        "font": "Helvetica-Bold",
        "font_size": 14,
        "color": "darkblue",
        "alignment": "left"
      },
      "date": {
        "text": "As of {date}",
        "position": [72, "page_height - 95"],
        "font": "Helvetica",
        "font_size": 11,
        "color": "black",
        "alignment": "left"
      }
    },
    "assets_section": {
      "position": [72, "page_height - 140"],
      "title": "ASSETS",
      "current_assets": {
        "title": "Current Assets:",
        "line_items": [
          {"description": "Cash", "field": "cash"},
          {"description": "Accounts Receivable", "field": "accounts_receivable"},
          {"description": "Inventory", "field": "inventory"},
          {"description": "Prepaid Expenses", "field": "prepaid_expenses"},
          {"description": "Other Current Assets", "field": "other_current_assets"}
        ],
        "subtotal": "Total Current Assets"
      },
      "fixed_assets": {
        "title": "Fixed Assets:",
        "line_items": [
          {"description": "Equipment", "field": "equipment"},
          {"description": "Furniture & Fixtures", "field": "furniture_fixtures"},
          {"description": "Vehicles", "field": "vehicles"},
          {"description": "Less: Accumulated Depreciation", "field": "accumulated_depreciation"}
        ],
        "subtotal": "Total Fixed Assets"
      },
      "other_assets": {
        "title": "Other Assets:",
        "line_items": [
          {"description": "Intangible Assets", "field": "intangible_assets"},
          {"description": "Investments", "field": "investments"},
          {"description": "Other Assets", "field": "other_assets"}
        ],
        "subtotal": "Total Other Assets"
      },
      "total": "TOTAL ASSETS",
      "column_widths": [300, 150],
      "font": "Helvetica",
      "font_size": 10
    },
    "liabilities_section": {
      "position": [72, "page_height - 400"],
      "title": "LIABILITIES",
      "current_liabilities": {
        "title": "Current Liabilities:",
        "line_items": [
          {"description": "Accounts Payable", "field": "accounts_payable"},
          {"description": "Accrued Expenses", "field": "accrued_expenses"},
          {"description": "Short-term Debt", "field": "short_term_debt"},
          {"description": "Current Portion of Long-term Debt", "field": "current_portion_long_term_debt"},
          {"description": "Other Current Liabilities", "field": "other_current_liabilities"}
        ],
        "subtotal": "Total Current Liabilities"
      },
      "long_term_liabilities": {
        "title": "Long-term Liabilities:",
        "line_items": [
          {"description": "Long-term Debt", "field": "long_term_debt"},
          {"description": "Notes Payable", "field": "notes_payable"},
          {"description": "Other Long-term Liabilities", "field": "other_long_term_liabilities"}
        ],
        "subtotal": "Total Long-term Liabilities"
      },
      "total": "TOTAL LIABILITIES",
      "column_widths": [300, 150],
      "font": "Helvetica",
      "font_size": 10
    },
    "equity_section": {
      "position": [72, "page_height - 600"],
      "title": "EQUITY",
      "line_items": [
        {"description": "Owner's Equity/Retained Earnings", "field": "retained_earnings"},
        {"description": "Additional Paid-in Capital", "field": "paid_in_capital"},
        {"description": "Current Year Earnings", "field": "current_year_earnings"}
      ],
      "total": "TOTAL EQUITY",
      "column_widths": [300, 150],
      "font": "Helvetica",
      "font_size": 10
    },
    "balancing_equation": {
      "position": [72, "page_height - 700"],
      "text": "TOTAL LIABILITIES + EQUITY",
      "font": "Helvetica-Bold",
      "font_size": 12,
      "color": "darkblue"
